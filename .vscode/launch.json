{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ETL Test",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/e2e/test_etl_workflow.py",
                "-v",
                "--log-cli-level=DEBUG",
                "--capture=no",
                "--pdb"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "AWS_ACCESS_KEY_ID": "testing",
                "AWS_SECRET_ACCESS_KEY": "testing",
                "AWS_DEFAULT_REGION": "us-east-1",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "stopOnEntry": false,
            "showReturnValue": true
        }
    ]
}